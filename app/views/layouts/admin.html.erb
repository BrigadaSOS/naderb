<!DOCTYPE html>
<html>
  <head>
    <title>Nadeshikorb Admin</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gray-900 text-white">
    <div class="flex h-screen">
      <!-- Sidebar -->
      <nav class="w-64 bg-gray-800 border-r border-gray-700">
        <div class="p-6">
          <h1 class="text-xl font-bold text-white">Admin Panel</h1>
        </div>

        <div class="mt-6">
          <%= link_to dashboard_admin_root_path,
              class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors #{current_page?(dashboard_admin_root_path) ? 'bg-gray-700 text-white border-r-2 border-blue-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6h-8V5z"/>
            </svg>
            Dashboard
          <% end %>

          <%= link_to dashboard_admin_config_path,
              class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors #{current_page?(dashboard_admin_config_path) ? 'bg-gray-700 text-white border-r-2 border-blue-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/>
            </svg>
            Config
          <% end %>

          <%= link_to dashboard_admin_data_path,
              class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors #{current_page?(dashboard_admin_data_path) ? 'bg-gray-700 text-white border-r-2 border-blue-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4"/>
            </svg>
            Data
          <% end %>

          <%= link_to dashboard_admin_bot_path,
              class: "flex items-center px-6 py-3 text-gray-300 hover:bg-gray-700 hover:text-white transition-colors #{current_page?(dashboard_admin_bot_path) ? 'bg-gray-700 text-white border-r-2 border-blue-500' : ''}" do %>
            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
            Bot
          <% end %>
        </div>

        <div class="absolute bottom-0 w-64 p-6 border-t border-gray-700">
          <div class="flex items-center">
            <div class="flex-1">
              <p class="text-sm text-gray-300">Logged in as</p>
              <p class="text-white font-medium"><%= current_user.username || current_user.email %></p>
            </div>
          </div>
          <div class="mt-3">
            <%= link_to "← Back to Site", dashboard_path,
                class: "text-sm text-gray-400 hover:text-white transition-colors" %>
          </div>
        </div>
      </nav>

      <!-- Main Content -->
      <main class="flex-1 overflow-y-auto">
        <div class="p-8">
          <%= yield %>
        </div>
      </main>
    </div>
  </body>
</html>