<% flash.each do |type, message| %>
  <div
    data-controller="toast"
    data-toast-type-value="<%= type %>"
    class="toast <%= notification_classes(type) %>"
    role="alert"
  >
    <%= notification_icon(type) %>
    <div class="ml-3 text-sm font-medium flex-1">
      <%= message %>
    </div>
    <button
      type="button"
      class="
        ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 p-1.5 inline-flex items-center justify-center h-8 w-8
        hover:bg-gray-200 dark:hover:bg-gray-700
      "
      data-action="click->toast#dismiss"
      aria-label="Close"
    >
      <span class="sr-only">Close</span>
      <svg
        class="w-3 h-3"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"
        />
      </svg>
    </button>
    <div class="toast-progress"></div>
  </div>
<% end %>

