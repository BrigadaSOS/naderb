<%
  toast_id = local_assigns[:toast_id] || "toast_#{Time.current.to_i}_#{rand(1000)}"
  type = local_assigns[:type] || "info"
  duration = local_assigns[:duration] || 5000
  dismissible = local_assigns.fetch(:dismissible, true)
%>

<div
  data-controller="toast"
  data-toast-duration-value="<%= duration %>"
  data-toast-dismissible-value="<%= dismissible %>"
  data-action="mouseenter->toast#pauseAutoDismiss mouseleave->toast#resumeAutoDismiss"
  id="<%= toast_id %>"
  class="<%= notification_classes(type) %> transform transition-all duration-300 ease-in-out translate-x-0 opacity-100"
  role="alert"
>
  <%= notification_icon(type) %>
  <div class="ml-3 text-sm font-medium flex-1">
    <%= message %>
  </div>
  <% if dismissible %>
    <button
      type="button"
      class="ml-auto -mx-1.5 -my-1.5 rounded-lg focus:ring-2 p-1.5 inline-flex h-8 w-8 hover:bg-gray-200 dark:hover:bg-gray-700"
      data-action="click->toast#dismiss"
      aria-label="Close"
    >
      <span class="sr-only">Close</span>
      <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
      </svg>
    </button>
  <% end %>
</div>