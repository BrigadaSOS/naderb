<nav class="bg-primary shadow-lg" data-turbo-permanent>
  <div class="px-6">
    <div class="flex justify-between items-center h-16">
      <!-- Logo and Name -->
      <div class="flex items-center space-x-3">
        <%= link_to root_path, class: "flex items-center space-x-3 text-primary-foreground font-bold text-xl hover:text-primary-foreground/80 transition-colors duration-200" do %>
          <%= image_tag "icon.png", alt: "Brigada SOS", class: "w-8 h-8" %>
          <span>Brigada SOS Japon√©s</span>
        <% end %>
      </div>
      <!-- Right side: Discord Link and Profile -->
      <div class="flex items-center space-x-4">
        <% if user_signed_in? %>
          <!-- DEV: Role Impersonation (Development Only) -->
          <% if Rails.env.development? %>
            <%= render "shared/dev_impersonator" %>
          <% end %>
        <% end %>
        <!-- Language Switcher -->
        <%= render "shared/language_switcher" %>
        <!-- Discord Link -->
        <a
          href="https://discord.gg/ajWm26ADEj"
          class="text-primary-foreground/80 hover:text-primary-foreground transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
        >
          <%= discord_icon("w-6 h-6") %>
        </a>

        <% if user_signed_in? %>
          <!-- Profile Dropdown -->
          <div class="relative" data-controller="dropdown">
            <button
              data-action="click->dropdown#toggle"
              class="
                flex items-center space-x-2 text-primary-foreground/80 hover:text-primary-foreground transition-colors
                duration-200 focus:outline-none
              "
            >
              <!-- Profile Icon -->
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path
                  d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                />
              </svg>
              <!-- Dropdown arrow -->
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z"
                  clip-rule="evenodd"
                />
              </svg>
            </button>
            <!-- Dropdown Menu -->
            <div
              data-dropdown-target="menu"
              class="
                hidden absolute right-0 mt-2 w-48 bg-popover rounded-md shadow-lg border
                border-border z-10
              "
            >
              <div class="py-1">
                <%= link_to t("nav.dashboard"),
                dashboard_path,
                class:
                  "block px-4 py-2 text-sm text-popover-foreground hover:bg-muted hover:text-foreground transition-colors duration-200" %>

                <%= button_to t("nav.logout"),
                "/users/sign_out",
                method: :delete,
                class:
                  "w-full text-left px-4 py-2 text-sm text-destructive hover:bg-muted hover:text-destructive-foreground transition-colors duration-200" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</nav>
