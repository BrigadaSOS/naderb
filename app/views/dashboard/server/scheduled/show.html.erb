<div class="flex h-full w-full">
  <%= render "dashboard/sidebar" %>

  <div class="flex-1 p-6 overflow-y-auto">
    <div class="mb-8 flex justify-between items-center">
      <div>
        <h1 class="text-3xl font-bold text-foreground mb-2"><%= @scheduled_message.name %></h1>
        <% if @scheduled_message.description.present? %>
          <p class="text-muted-foreground"><%= @scheduled_message.description %></p>
        <% end %>
      </div>
      <% if current_user.admin? || current_user.moderator? %>
        <div class="flex gap-2">
          <%= link_to "Edit", edit_dashboard_server_scheduled_path(@scheduled_message), class: "px-4 py-2 bg-primary hover:bg-primary/90 text-primary-foreground rounded transition-colors" %>
          <%= button_to "Test Execute", test_execute_dashboard_server_scheduled_path(@scheduled_message), method: :post, class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded transition-colors" %>
          <%= button_to @scheduled_message.enabled? ? "Disable" : "Enable", toggle_enabled_dashboard_server_scheduled_path(@scheduled_message), method: :post, class: "px-4 py-2 bg-yellow-600 hover:bg-yellow-700 text-white rounded transition-colors" %>
          <%= button_to "Delete", dashboard_server_scheduled_path(@scheduled_message), method: :delete, form: { data: { turbo_confirm: "Are you sure you want to delete this scheduled message?" } }, class: "px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded transition-colors" %>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <!-- Configuration -->
      <div class="bg-card rounded-lg p-6">
        <h2 class="text-xl font-semibold text-foreground mb-4">Configuration</h2>

        <div class="space-y-4 text-sm">
          <div>
            <span class="text-muted-foreground">Status:</span>
            <p class="font-medium mt-1">
              <% if @scheduled_message.enabled? %>
                <span class="inline-flex items-center px-2 py-1 text-xs bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 rounded">
                  <span class="w-2 h-2 bg-green-500 rounded-full mr-1.5"></span>
                  Enabled
                </span>
              <% else %>
                <span class="inline-flex items-center px-2 py-1 text-xs bg-gray-100 text-gray-800 dark:bg-gray-800 dark:text-gray-300 rounded">
                  <span class="w-2 h-2 bg-gray-400 rounded-full mr-1.5"></span>
                  Disabled
                </span>
              <% end %>
            </p>
          </div>

          <div>
            <span class="text-muted-foreground">Schedule:</span>
            <p class="font-mono font-medium mt-1 text-foreground"><%= @scheduled_message.schedule %></p>
          </div>

          <div>
            <span class="text-muted-foreground">Timezone:</span>
            <p class="font-mono font-medium mt-1 text-foreground"><%= @scheduled_message.timezone %></p>
          </div>

          <div>
            <span class="text-muted-foreground">Data Query:</span>
            <% if @scheduled_message.data_query.present? %>
              <p class="font-mono font-medium mt-1 text-foreground"><%= @scheduled_message.data_query %></p>
            <% else %>
              <p class="font-medium mt-1 text-muted-foreground">None (static message)</p>
            <% end %>
          </div>

          <div>
            <span class="text-muted-foreground">Consumer Type:</span>
            <p class="font-mono font-medium mt-1 text-foreground"><%= @scheduled_message.consumer_type.titleize %></p>
          </div>

          <div>
            <span class="text-muted-foreground">Target Channel:</span>
            <p class="font-mono font-medium mt-1 text-foreground"><%= @scheduled_message.channel_id %></p>
          </div>

          <div>
            <span class="text-muted-foreground">Created By:</span>
            <p class="font-medium mt-1 text-foreground"><%= @scheduled_message.created_by.display_name || @scheduled_message.created_by.username %></p>
          </div>

          <div>
            <span class="text-muted-foreground">Created:</span>
            <p class="font-mono text-xs font-medium mt-1 text-foreground"><%= @scheduled_message.created_at.to_fs(:db) %></p>
          </div>

          <div>
            <span class="text-muted-foreground">Updated:</span>
            <p class="font-mono text-xs font-medium mt-1 text-foreground"><%= @scheduled_message.updated_at.to_fs(:db) %></p>
          </div>
        </div>
      </div>

      <!-- Message Template -->
      <div class="bg-card rounded-lg p-6">
        <h2 class="text-xl font-semibold text-foreground mb-4">Message Template (ERB)</h2>
        <div class="bg-background rounded p-4 font-mono text-sm text-foreground whitespace-pre-wrap max-h-64 overflow-y-auto border border-border">
          <%= @scheduled_message.template %>
        </div>
        <div class="mt-3 text-xs text-muted-foreground space-y-1">
          <p class="font-semibold text-foreground">Available Variables:</p>
          <p>Time/Date: <code class="bg-muted px-1 rounded">@date</code>, <code class="bg-muted px-1 rounded">@time</code>, <code class="bg-muted px-1 rounded">@day_of_week</code>, <code class="bg-muted px-1 rounded">@month</code>, <code class="bg-muted px-1 rounded">@year</code></p>
          <% if @scheduled_message.data_query == "birthdays_today" %>
            <p>Birthday Query: <code class="bg-muted px-1 rounded">@users</code>, <code class="bg-muted px-1 rounded">@users_count</code>, <code class="bg-muted px-1 rounded">@birthday_month</code>, <code class="bg-muted px-1 rounded">@birthday_day</code></p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Execution History -->
    <div class="mt-6 bg-card rounded-lg p-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-xl font-semibold text-foreground">Recent Executions</h2>
        <%= link_to "View All", executions_dashboard_server_scheduled_path(@scheduled_message), class: "text-sm text-primary hover:underline" %>
      </div>

      <% if @executions.empty? %>
        <p class="text-muted-foreground text-sm">No executions yet</p>
      <% else %>
        <div class="overflow-x-auto">
          <table class="w-full text-sm">
            <thead>
              <tr class="border-b border-border">
                <th class="text-left py-2 text-muted-foreground font-semibold">Executed At</th>
                <th class="text-left py-2 text-muted-foreground font-semibold">Status</th>
                <th class="text-left py-2 text-muted-foreground font-semibold">Consumer</th>
                <th class="text-left py-2 text-muted-foreground font-semibold">Details</th>
              </tr>
            </thead>
            <tbody>
              <% @executions.each do |execution| %>
                <tr class="border-b border-border hover:bg-muted/50">
                  <td class="py-3 text-xs font-mono"><%= execution.executed_at.to_fs(:db) %></td>
                  <td class="py-3">
                    <% if execution.status == "success" %>
                      <span class="inline-flex items-center px-2 py-1 text-xs bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 rounded">
                        Success
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 text-xs bg-red-100 text-red-800 dark:bg-red-900 dark:text-red-200 rounded">
                        Error
                      </span>
                    <% end %>
                  </td>
                  <td class="py-3 font-mono text-xs text-foreground"><%= execution.consumer_type %></td>
                  <td class="py-3 text-xs text-muted-foreground">
                    <% if execution.result_data.present? %>
                      <% if execution.result_data["query_data"] && execution.result_data["query_data"]["users_count"] %>
                        <%= execution.result_data["query_data"]["users_count"] %> users
                      <% end %>
                      <% if execution.result_data["delivery_result"] %>
                        <% if execution.result_data["delivery_result"]["success"] %>
                          ✓ Delivered
                        <% else %>
                          ✗ <%= execution.result_data["delivery_result"]["details"]["error"] %>
                        <% end %>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% end %>
    </div>

    <!-- Back Link -->
    <div class="mt-6">
      <%= link_to "← Back to Messages", dashboard_server_scheduled_index_path, class: "text-primary hover:underline" %>
    </div>
  </div>
</div>
