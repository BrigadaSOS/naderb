<dialog
  id="tagModal"
  class="
    bg-gray-800 border border-gray-700 rounded-lg max-w-2xl w-full mx-auto my-auto
    max-h-[90vh] overflow-y-auto p-6 shadow-2xl
  "
  open
>
  <div class="flex items-center justify-between mb-4">
    <h3 class="text-lg font-semibold text-white"><%= title %></h3>
    <%= link_to dashboard_server_tags_path(search: params[:search]),
          data: { turbo_action: "advance" },
          class: "text-gray-400 hover:text-white modal-close cursor-pointer" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        ></path>
      </svg>
    <% end %>
  </div>

  <%= form_with model: [:dashboard, :server, tag],
                url: tag.persisted? ? dashboard_server_tag_path(tag, search: params[:search]) : dashboard_server_tags_path,
                class: "space-y-4",
                id: "tag-form",
                data: { turbo_frame: "_top", controller: "tag-preview" } do |form| %>
    <% if tag.errors.any? %>
      <div class="bg-red-600 text-white px-4 py-2 rounded-lg text-sm">
        <ul class="list-disc list-inside space-y-1">
          <% tag.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name,
                 t("dashboard.server.tags.form.field.name"),
                 class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= form.text_field :name,
                      disabled: read_only,
                      data: {
                        form_toggle_target: "field",
                        testid: "tag-name-input"
                      },
                      class:
                        "w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 #{read_only ? "cursor-not-allowed opacity-60" : "focus:outline-none focus:ring-2 focus:ring-blue-500"}",
                      placeholder:
                        t("dashboard.server.tags.form.field.name_placeholder") %>
    </div>

    <div>
      <%= form.label :content,
                 t("dashboard.server.tags.form.field.content"),
                 class: "block text-sm font-medium text-gray-300 mb-1" %>
      <%= form.text_area :content,
                     rows: 4,
                     disabled: read_only,
                     data: {
                       form_toggle_target: "field",
                       testid: "tag-content-input",
                       tag_preview_target: "content",
                       action: "input->tag-preview#updatePreview blur->tag-preview#updatePreview"
                     },
                     id: "tag-content-display",
                     class:
                       "w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 #{read_only ? "cursor-not-allowed opacity-60" : "focus:outline-none focus:ring-2 focus:ring-blue-500"}",
                     placeholder:
                       t("dashboard.server.tags.form.field.content_placeholder") %>
      <div data-tag-preview-target="preview" class="<%= tag.image_url? ? 'mt-3 flex justify-center' : 'mt-3 hidden' %>">
        <img
          data-tag-preview-target="previewImage"
          src="<%= tag.content&.strip %>"
          alt="<%= tag.name %>"
          class="
            max-w-full max-h-64 object-contain rounded border border-gray-600
          "
        >
      </div>
    </div>

    <% if current_user.admin_or_mod? && tag.persisted? %>
      <!-- Admin Section Separator -->
      <hr class="border-gray-600">

      <div>
        <%= form.label :discord_uid,
                   t("dashboard.server.tags.form.field.discord_uid"),
                   class: "block text-sm font-medium text-gray-300 mb-1" %>
        <%= text_field :tag,
        :discord_uid,
        value: params.dig(:tag, :discord_uid) || tag.user.discord_uid,
        disabled: read_only,
        data: {
          form_toggle_target: "field",
        },
        class:
          "w-full px-3 py-2 bg-gray-700 border border-gray-600 rounded-lg text-white placeholder-gray-400 #{read_only ? "cursor-not-allowed opacity-60" : "focus:outline-none focus:ring-2 focus:ring-blue-500"}",
        placeholder: t("dashboard.server.tags.form.field.discord_uid_placeholder") %>
        <p class="text-xs text-gray-400 mt-1"><%= t("dashboard.server.tags.form.field.current_owner", owner: tag.user.name) %></p>
      </div>
    <% end %>

  <% end %>

  <% if !read_only %>
    <div class="flex justify-end items-center space-x-3 pt-4">
      <% if tag.persisted? %>
        <%= button_to t("dashboard.server.tags.form.button.delete"),
            dashboard_server_tag_path(tag, search: params[:search]),
            method: :delete,
            form: { data: { turbo_frame: "_top" }, style: "display: inline;" },
            data: { testid: "delete-tag-button" },
            onclick: "return confirm('#{j t("dashboard.server.tags.form.button.delete_confirm")}');",
            class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-lg transition-colors" %>
      <% end %>
      <button type="submit" form="tag-form" data-testid="submit-tag-button" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors">
        <%= submit_text %>
      </button>
    </div>
  <% end %>

  <% if read_only %>
    <div class="flex justify-end pt-4">
      <% if can_edit_tag?(tag) %>
        <%= link_to t("dashboard.server.tags.form.button.edit"),
        edit_dashboard_server_tag_path(tag, search: params[:search]),
        data: { turbo_action: "advance" },
        class:
          "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-lg transition-colors" %>
      <% end %>
    </div>
  <% end %>
</dialog>
