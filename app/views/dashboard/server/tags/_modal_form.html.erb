<dialog
  id="tagModal"
  class="
    bg-background border border-border rounded max-w-2xl w-[95vw] sm:w-full mx-auto
    my-auto max-h-[90vh] overflow-y-auto shadow-2xl p-4 sm:p-6
  "
  open
>
  <div class="flex items-center justify-between mb-3 sm:mb-4">
    <h3 class="text-base sm:text-lg font-semibold text-foreground"><%= title %></h3>
    <%= link_to dashboard_server_tags_path(search: params[:search]),
          data: { turbo_action: "advance" },
          class: "text-muted-foreground hover:text-foreground modal-close cursor-pointer" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        ></path>
      </svg>
    <% end %>
  </div>

  <%= form_with model: [:dashboard, :server, tag],
                url: tag.persisted? ? dashboard_server_tag_path(tag, search: params[:search]) : dashboard_server_tags_path,
                class: "space-y-4",
                id: "tag-form",
                data: { turbo_frame: "_top", controller: "tag-preview" } do |form| %>
    <% if tag.errors.any? %>
      <div
        class="
          bg-destructive text-destructive-foreground px-4 py-2 rounded text-sm
        "
      >
        <ul class="list-disc list-inside space-y-1">
          <% tag.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name,
                 t("dashboard.server.tags.form.field.name"),
                 class: "block text-sm font-medium text-muted-foreground mb-1" %>
      <%= form.text_field :name,
                      disabled: read_only,
                      data: {
                        form_toggle_target: "field",
                        testid: "tag-name-input",
                      },
                      class:
                        "w-full px-3 py-2 bg-card border border-border rounded text-foreground placeholder-muted-foreground #{read_only ? "cursor-not-allowed opacity-60" : "focus:outline-none focus:ring-2 focus:ring-ring"}",
                      placeholder:
                        t("dashboard.server.tags.form.field.name_placeholder") %>
    </div>
    <!-- Tabbed Content/Image Input -->
    <div
      data-controller="tabs"
      data-remove-image-text="<%= t('dashboard.server.tags.form.button.remove_image') %>"
    >
      <!-- Tab Headers -->
      <div class="flex border-b border-border mb-4">
        <button
          type="button"
          data-tabs-target="tab"
          data-action="click->tabs#switch"
          data-tab-id="content"
          class="
            px-4 py-2 text-sm font-medium border-b-2 border-primary text-primary
          "
        >
          <%= t("dashboard.server.tags.form.tab.content") %>
        </button>
        <button
          type="button"
          data-tabs-target="tab"
          data-action="click->tabs#switch"
          data-tab-id="image"
          class="
            px-4 py-2 text-sm font-medium border-b-2 border-transparent
            text-muted-foreground hover:text-foreground
          "
        >
          <%= t("dashboard.server.tags.form.tab.image") %>
        </button>
      </div>
      <!-- Hidden field to track which mode is active -->
      <%= form.hidden_field :input_mode,
                        value: "content",
                        data: {
                          tabs_target: "modeInput",
                        } %>
      <!-- Content Tab Panel -->
      <div data-tabs-target="panel" data-tab-id="content">
        <%= form.label :content,
                   t("dashboard.server.tags.form.field.content"),
                   class: "block text-sm font-medium text-muted-foreground mb-1" %>
        <%= form.text_area :content,
                       rows: 4,
                       disabled: read_only,
                       data: {
                         form_toggle_target: "field",
                         testid: "tag-content-input",
                         tag_preview_target: "content",
                         action:
                           "input->tag-preview#updatePreview blur->tag-preview#updatePreview",
                       },
                       id: "tag-content-display",
                       class:
                         "w-full px-3 py-2 bg-card border border-border rounded text-foreground placeholder-muted-foreground #{read_only ? "cursor-not-allowed opacity-60" : "focus:outline-none focus:ring-2 focus:ring-ring"}",
                       placeholder:
                         t("dashboard.server.tags.form.field.content_placeholder") %>

        <div
          data-tag-preview-target="preview"
          class="<%= tag.content_is_image_url? ? 'mt-3 flex justify-center' : 'mt-3 hidden' %>"
        >
          <img
            data-tag-preview-target="previewImage"
            src="<%= tag.content&.strip %>"
            alt="<%= tag.name %>"
            class="
              max-w-full max-h-64 object-contain rounded border border-border
            "
          >
        </div>
      </div>
      <!-- Image Tab Panel -->
      <div data-tabs-target="panel" data-tab-id="image" class="hidden">
        <%= form.label :image,
                   t("dashboard.server.tags.form.field.image"),
                   class: "block text-sm font-medium text-muted-foreground mb-1" %>
        <%= form.file_field :image,
                        accept: "image/*",
                        disabled: read_only,
                        data: {
                          form_toggle_target: "field",
                          testid: "tag-image-input",
                          tabs_target: "imageInput",
                          action: "change->tabs#handleImageChange",
                        },
                        class:
                          "w-full px-3 py-2 bg-card border border-border rounded text-foreground #{read_only ? "cursor-not-allowed opacity-60" : "focus:outline-none focus:ring-2 focus:ring-ring file:mr-4 file:py-2 file:px-4 file:rounded file:border-0 file:text-sm file:font-semibold file:bg-primary file:text-primary-foreground hover:file:bg-primary/90"}" %>

        <% if tag.image.attached? && tag.image.blob.persisted? %>
          <!-- Hidden field persists when preview is removed from DOM -->
          <%= form.hidden_field :remove_image,
                            value: "false",
                            data: {
                              tabs_target: "removeImageInput",
                            } %>

          <div class="mt-3" data-tabs-target="imagePreview">
            <div class="flex justify-center">
              <%= image_tag tag.image,
              alt: tag.name,
              class: "max-w-full max-h-64 object-contain rounded border border-border" %>
            </div>
            <% unless read_only %>
              <div class="mt-2 flex justify-center">
                <button
                  type="button"
                  data-action="click->tabs#removeImage"
                  data-testid="remove-image-button"
                  class="
                    bg-destructive hover:bg-destructive/90 text-destructive-foreground px-3 py-1
                    rounded text-sm transition-colors
                  "
                >
                  <%= t("dashboard.server.tags.form.button.remove_image") %>
                </button>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <% if current_user.admin_or_mod? && tag.persisted? %>
      <!-- Admin Section Separator -->
      <hr class="border-border">

      <div>
        <%= form.label :discord_uid,
                   t("dashboard.server.tags.form.field.discord_uid"),
                   class: "block text-sm font-medium text-muted-foreground mb-1" %>
        <%= text_field :tag,
        :discord_uid,
        value: params.dig(:tag, :discord_uid) || tag.user.discord_uid,
        disabled: read_only,
        data: {
          form_toggle_target: "field",
        },
        class:
          "w-full px-3 py-2 bg-card border border-border rounded text-foreground placeholder-muted-foreground #{read_only ? "cursor-not-allowed opacity-60" : "focus:outline-none focus:ring-2 focus:ring-ring"}",
        placeholder: t("dashboard.server.tags.form.field.discord_uid_placeholder") %>
        <p class="text-xs text-muted-foreground mt-1"><%= t("dashboard.server.tags.form.field.current_owner", owner: tag.user.name) %></p>
      </div>
    <% end %>

  <% end %>

  <% if !read_only %>
    <div
      class="
        flex flex-col sm:flex-row justify-end items-stretch sm:items-center gap-2
        sm:gap-3 pt-4
      "
    >
      <% if tag.persisted? %>
        <%= button_to t("dashboard.server.tags.form.button.delete"),
        dashboard_server_tag_path(tag, search: params[:search]),
        method: :delete,
        form: {
          data: {
            turbo_frame: "_top",
          },
          style: "display: inline;",
        },
        data: {
          testid: "delete-tag-button",
        },
        onclick:
          "return confirm('#{j t("dashboard.server.tags.form.button.delete_confirm")}');",
        class:
          "bg-destructive hover:bg-destructive/90 text-destructive-foreground px-4 py-2 rounded transition-colors text-sm sm:text-base" %>
      <% end %>
      <button
        type="submit"
        form="tag-form"
        data-testid="submit-tag-button"
        class="
          bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-2 rounded
          transition-colors text-sm sm:text-base
        "
      >
        <%= submit_text %>
      </button>
    </div>
  <% end %>

  <% if read_only %>
    <div class="flex justify-end pt-4">
      <% if can_edit_tag?(tag) %>
        <%= link_to t("dashboard.server.tags.form.button.edit"),
        edit_dashboard_server_tag_path(tag, search: params[:search]),
        data: {
          turbo_action: "advance",
        },
        class:
          "bg-primary hover:bg-primary/90 text-primary-foreground px-4 py-2 rounded transition-colors" %>
      <% end %>
    </div>
  <% end %>
</dialog>
