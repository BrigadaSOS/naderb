<div class="flex h-full w-full">
  <%= render "dashboard/sidebar" %>

  <div class="flex-1 p-6 overflow-y-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Discord Bot Management</h1>
      <p class="text-gray-400">Monitor and configure the Discord bot</p>
    </div>

    <div class="space-y-6">
  <div class="bg-gray-800 rounded-lg p-6">
    <h2 class="text-xl font-semibold text-white mb-4">Bot Status</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-gray-300">Connection Status</span>
          <span class="text-green-400 bg-green-400/20 px-2 py-1 rounded text-sm">Connected</span>
        </div>

        <div class="flex items-center justify-between">
          <span class="text-gray-300">Bot Token</span>
          <span class="<%= ENV['DISCORD_TOKEN'].present? ? 'text-green-400' : 'text-red-400' %>">
            <%= ENV['DISCORD_TOKEN'].present? ? 'Configured' : 'Missing' %>
          </span>
        </div>

        <div class="flex items-center justify-between">
          <span class="text-gray-300">Server ID</span>
          <span class="text-blue-400 font-mono text-sm">
            <%= Setting.discord_server_id || 'Not configured' %>
          </span>
        </div>
      </div>

      <div class="space-y-4">
        <div class="flex items-center justify-between">
          <span class="text-gray-300">OAuth Client ID</span>
          <span class="<%= ENV['DISCORD_OAUTH_CLIENT_ID'].present? ? 'text-green-400' : 'text-red-400' %>">
            <%= ENV['DISCORD_OAUTH_CLIENT_ID'].present? ? 'Configured' : 'Missing' %>
          </span>
        </div>

        <div class="flex items-center justify-between">
          <span class="text-gray-300">OAuth Secret</span>
          <span class="<%= ENV['DISCORD_OAUTH_CLIENT_SECRET'].present? ? 'text-green-400' : 'text-red-400' %>">
            <%= ENV['DISCORD_OAUTH_CLIENT_SECRET'].present? ? 'Configured' : 'Missing' %>
          </span>
        </div>

        <div class="flex items-center justify-between">
          <span class="text-gray-300">Registered Commands</span>
          <span class="text-yellow-400">Available</span>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-gray-800 rounded-lg p-6">
    <h2 class="text-xl font-semibold text-white mb-4">Bot Configuration</h2>

    <div class="space-y-4">
      <details class="bg-gray-700 rounded-lg group">
        <summary class="p-4 cursor-pointer select-none flex items-center justify-between hover:bg-gray-600/50 transition-colors rounded-lg">
          <h3 class="text-white font-medium">Available Commands</h3>
          <svg class="w-5 h-5 text-gray-400 transform transition-transform group-open:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </summary>
        <div class="px-4 pb-4 pt-2 text-sm text-gray-300 space-y-3">
          <% @commands.each do |command| %>
            <% if command[:subcommands].present? %>
              <% command[:subcommands].each do |subcommand| %>
                <div class="space-y-1">
                  <div>• <code class="text-blue-400">/<%= command[:name] %> <%= subcommand[:name] %></code> - <%= subcommand[:description] %></div>
                  <% if subcommand[:parameters].present? %>
                    <div class="ml-4 text-xs text-gray-400 space-y-0.5">
                      <% subcommand[:parameters].each do |param| %>
                        <div>
                          <code class="text-purple-400"><%= param[:name] %></code>
                          <span class="text-gray-500">(<%= param[:type] %>)</span>
                          <% if param[:required] %>
                            <span class="text-red-400">required</span>
                          <% else %>
                            <span class="text-green-400">optional</span>
                          <% end %>
                          - <%= param[:description] %>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="space-y-1">
                <div>• <code class="text-blue-400">/<%= command[:name] %></code> - <%= command[:description] %></div>
                <% if command[:parameters].present? %>
                  <div class="ml-4 text-xs text-gray-400 space-y-0.5">
                    <% command[:parameters].each do |param| %>
                      <div>
                        <code class="text-purple-400"><%= param[:name] %></code>
                        <span class="text-gray-500">(<%= param[:type] %>)</span>
                        <% if param[:required] %>
                          <span class="text-red-400">required</span>
                        <% else %>
                          <span class="text-green-400">optional</span>
                        <% end %>
                        - <%= param[:description] %>
                      </div>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% end %>
        </div>
      </details>
    </div>

    <div class="mt-6 text-sm text-gray-400">
      <p><strong>Note:</strong> Bot management features like restart and command registration will be added in future updates. To configure role permissions, visit the <a href="<%= dashboard_admin_config_index_path %>" class="text-blue-400 hover:underline">Configuration page</a>.</p>
    </div>
  </div>

  <div class="bg-gray-800 rounded-lg p-6">
    <h2 class="text-xl font-semibold text-white mb-4">Usage Statistics</h2>

    <div class="text-center py-8 text-gray-400">
      <svg class="w-16 h-16 mx-auto mb-4 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
      </svg>
      <p>Bot usage statistics and analytics coming soon</p>
    </div>
  </div>
</div>
  </div>
</div>