<div class="flex h-full w-full relative">
  <!-- Mobile Menu Toggle (hidden checkbox) -->
  <input type="checkbox" id="mobile-menu-toggle" class="hidden peer">

  <!-- Overlay for mobile (dark backdrop when menu is open) -->
  <label for="mobile-menu-toggle" class="hidden peer-checked:block lg:peer-checked:hidden fixed top-16 left-0 right-0 bottom-0 bg-black/50 z-30"></label>

  <%= render "sidebar" %>

  <div class="flex-1 p-3 sm:p-4 md:p-6 overflow-y-auto">
    <% case action_name %>
    <% when 'profile' %>
      <%= render "profile_content" %>
    <% when 'tags' %>
      <%= render "tags_content" %>
    <% else %>
      <div class="mx-auto my-auto text-center py-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-foreground mb-4"><%= t("dashboard.welcome_back", username: current_user.name) %></h1>
      </div>
    <% end %>
  </div>
</div>
