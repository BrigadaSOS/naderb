<div class="max-w-4xl">
  <div class="mb-6">
    <h2 class="text-2xl font-bold text-white mb-2">Profile</h2>
    <p class="text-gray-400">Manage your profile information and settings</p>
  </div>

  <div class="bg-gray-800 rounded-lg p-6">
    <div class="flex items-center space-x-4 mb-6">
      <div
        class="
          w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center
        "
      >
        <span class="text-2xl">ðŸ‘¤</span>
      </div>
      <div>
        <h3 class="text-xl font-semibold text-white"><%= current_user.username %></h3>
        <p class="text-gray-400"><%= current_user.email %></p>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div>
        <h4 class="text-lg font-medium text-white mb-3">Basic Information</h4>
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-400">Username</label>
            <p class="text-white"><%= current_user.username %></p>
          </div>
          <div>
            <label class="block text-sm font-medium text-gray-400">Email</label>
            <p class="text-white"><%= current_user.email %></p>
          </div>
        </div>
      </div>

      <div>
        <h4 class="text-lg font-medium text-white mb-3">Account Details</h4>
        <div class="space-y-3">
          <div>
            <label class="block text-sm font-medium text-gray-400">Member Since</label>
            <p class="text-white"><%= current_user.created_at.strftime("%B %Y") %></p>
          </div>
        </div>
      </div>
    </div>

    <div class="mt-6 pt-6 border-t border-gray-700">
      <p class="text-gray-400 text-sm">Profile editing functionality will be added in future updates.</p>
    </div>
  </div>
</div>

