<div class="w-64 bg-gray-800 h-full p-4 flex-shrink-0">
  <nav class="space-y-6">
    <!-- Profile Settings Section -->
    <div>
      <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-3">Profile</h3>
      <div class="space-y-1">
        <%= link_to "/dashboard/profile",
            class: "flex items-center space-x-3 w-full p-3 rounded-lg transition-colors #{'bg-gray-700 text-white' if request.path.start_with?('/dashboard/profile')} hover:bg-gray-700 text-gray-300 hover:text-white" do %>
          <span class="text-lg">👤</span>
          <span>Profile</span>
        <% end %>
      </div>
    </div>
    <!-- Server Settings Section -->
    <div>
      <h3 class="text-sm font-semibold text-gray-400 uppercase tracking-wider mb-3">Server</h3>
      <div class="space-y-1">
        <%= link_to "/dashboard/server/tags",
            class: "flex items-center space-x-3 w-full p-3 rounded-lg transition-colors #{'bg-gray-700 text-white' if request.path.start_with?('/dashboard/server/tags')} hover:bg-gray-700 text-gray-300 hover:text-white" do %>
          <span class="text-lg">🏷️</span>
          <span>Tags</span>
        <% end %>
      </div>
    </div>

    <% if current_user.admin? %>
    <!-- Admin Section -->
    <div>
      <h3 class="text-sm font-semibold text-yellow-400 uppercase tracking-wider mb-3">Admin</h3>
      <div class="space-y-1">
        <%= link_to dashboard_admin_config_index_path,
            class: "flex items-center space-x-3 w-full p-3 rounded-lg transition-colors #{'bg-gray-700 text-white' if request.path.start_with?('/dashboard/admin/config')} hover:bg-gray-700 text-gray-300 hover:text-white" do %>
          <span class="text-lg">⚙️</span>
          <span>Config</span>
        <% end %>

        <%= link_to dashboard_admin_data_path,
            class: "flex items-center space-x-3 w-full p-3 rounded-lg transition-colors #{'bg-gray-700 text-white' if request.path.start_with?('/dashboard/admin/data')} hover:bg-gray-700 text-gray-300 hover:text-white" do %>
          <span class="text-lg">🗄️</span>
          <span>Data</span>
        <% end %>

        <%= link_to dashboard_admin_bot_index_path,
            class: "flex items-center space-x-3 w-full p-3 rounded-lg transition-colors #{'bg-gray-700 text-white' if request.path.start_with?('/dashboard/admin/bot')} hover:bg-gray-700 text-gray-300 hover:text-white" do %>
          <span class="text-lg">🤖</span>
          <span>Bot</span>
        <% end %>
      </div>
    </div>
    <% end %>
  </nav>
</div>
